<h1>All the Current Items to Buy</h1>

    <% @items.each do |g| %>
        <ul>
            <%= link_to item_path g do %>
                <li>Name: <%= g.name %></li>
                <% end %>
                <li>Quantity: <%= g.quantity %></li>
                <li>Description: <%= g.description %></li>
                <hr><br><br>
        </ul>
    <% end %>

<%= link_to "Add an Item to the Shopping List", new_item_path(@item) %>

